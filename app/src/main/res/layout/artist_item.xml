<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="20dp"
        android:id="@+id/photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/artist1"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sangeet Mirsha"
        android:textColor="#9e005d"
        android:gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/detail"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="An 8 th generation exponent of the renowned Sarangi Gharana of Benaras Sangeet has received trinaing and guidance under his gradfather, pandit Bhangwan Das Mishra and his father Pandit Santosh Kumar Mishra"
        android:textColor="#9e005d"
        android:gravity="center"
        android:textSize="18dp"/>

</LinearLayout>